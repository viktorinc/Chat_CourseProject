<Window x:Class="Chat_Course_Project.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chat_Course_Project"
        mc:Ignorable="d"
        Title="Log in" Height="250" Width="300">
    <Grid Background="#FF475059">
        <Button Content="Login" FontSize="20" Background="#FFF37B53" Height="50" Width="100" Margin="99,122,93,44" Click="Log_In_Btn">
            <Button.Effect>
                <DropShadowEffect BlurRadius="30" ShadowDepth="10"/>
            </Button.Effect>
        </Button>
        <TextBox Height="30" Margin="57,66,49,120" Name="usrname">
            <TextBox.Effect>
                <DropShadowEffect BlurRadius="30" ShadowDepth="10"/>
            </TextBox.Effect>
        </TextBox>
    </Grid>
</Window>
